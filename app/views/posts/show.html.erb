  <div id="main_content">
    <div id="header">
      <p>Noticias</p>
	  <% if current_user.try(:admin?) %>
	  <div class="buttons">
	  <%= link_to "Nueva noticia", new_post_path, class: "btn btn-primary"%>
	  </div>
	  <% end %>
	<div>
	  <% flash.each do |name, msg|%>
	  <%= content_tag(:div, msg, class: "alert") %>
	  <% end %>
	  <h1 class="title">
	  <%= @post.title %>
	  </h1><br>
	  <p class="">
	  <%= @post.body %>
	  </p><br><br><br>
	  <p class="date">
	    Posted <%= time_ago_in_words(@post.created_at) %> Ago
	    <br><br>
	    <%= link_to 'Editar', edit_post_path(@post) %> |
	    <%= link_to 'Borrar', post_path(@post), method: :delete, data: {confirm: 'Â¿Estas seguro de querer borrar este post?'} %>
	  </p>
</div>

