<h1>New Post</h1>
<%= form_for :post, url: posts_path do |f| %>

 <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
 </div>


 <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
<!--
 <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image, class: 'btn btn-warning'  %>
    <br>-->

  <div class="actions">
    <%= f.submit 'Nuevo Post', :class => 'btn btn-success' %>
  </div>
<% end %>