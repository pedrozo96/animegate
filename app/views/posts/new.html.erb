


  <div id="main_content">
    <div id="header">
      <p>Noticias</p>
  <% if current_user.try(:admin?) %>
      <div class="buttons">
        <%= link_to "Nueva noticia", new_post_path, class: "btn btn-primary"%>
      </div>
      <% end %>
    </div>
    <% flash.each do |name, msg|%>
    <%= content_tag(:div, msg, class: "alert") %>
    <% end %>
<div id="page_wrapper">
<h1>Nueva noticia</h1>
<%= form_for :post, url: posts_path do |f| %>

 <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
 </div>


 <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
<!--
 <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image, class: 'btn btn-warning'  %>
    <br>-->

  <div class="actions">
    <%= f.submit 'Nuevo Post', :class => 'btn btn-success' %>
  </div>
<% end %>

</div>
</div>