<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
      <%= image_tag @anime.image.url(:medium) %>
      <div class="star-rating" data-score= <%= @avg_review %> ></div>
      <em><%="#{@reviews.length} reviews" %></em>
        <div class="table-responsible">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>Titulo:</strong></td>
                <td><%= @anime.title %></td>
              </tr>
              <tr>
                  <td><strong>Descripción:</strong></td>
                  <td><%= @anime.description %></td>
              </tr>
              <tr>
                <td><strong>Peso por capitulo</strong></td>
                <td><%= @anime.anime_size %></td>
              </tr>

              <tr>
                <td><strong>Studio:</strong></td>
                <td><%= @anime.studio %></td>
              </tr>

              <tr>
                <td><strong>Rating:</strong></td>
                <td><%= @anime.rating %></td>
              </tr>

              <tr>
                <td><strong>Fansub:</strong></td>
                <td><%= @anime.fansub %></td>
              </tr>

              <tr>
                <td><strong>Language:</strong></td>
                <td><%= @anime.language %></td>
              </tr>

              <tr>
                <td><strong>Subtitles:</strong></td>
                <td><%= @anime.subtitles %></td>
              </tr>

              <tr>
                <td><strong>Ovas:</strong></td>
                <td><%= @anime.ovas %></td>
              </tr>

              <tr>
                <td><strong>Resolution:</strong></td>
                <td><%= @anime.resolution %></td>
              </tr>

              <tr>
                <td><strong>File format:</strong></td>
                <td><%= @anime.file_format %></td>
              </tr>

              <tr>
                <td><strong>Anime episodes:</strong></td>
                <td><%= @anime.anime_episodes %></td>
              </tr>

              <tr>
                <td><strong>Server:</strong></td>
                <td><%= @anime.server %></td>
              </tr>

              <tr>
                <td><strong>Uploader:</strong></td>
                <td><%= @anime.uploader %></td>
              </tr>

              <tr>
                <td><strong>Year:</strong></td>
                <td><%= @anime.year %></td>
              </tr>

              <tr>
                <td><strong>Genre:</strong></td>
                <td><%= @anime.genre %></td>
              </tr>

            </tbody> 
          </table>
          <%= link_to "Escribe una opinión", new_anime_review_path(@anime) %>
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1">
        <h1 class="review_title"><%= @anime.title %></h1>
        <p><%= @anime.description %></p>

        <% if @reviews.blank? %>
        <h3>Sin criticas hasta ahora, te gustaria ser el primero en opinar?</h3>
        <%= link_to "Escribe tu opinión", new_anime_review_path(@anime), class: "btn btn-danger" %>
        <%else%>
        <% @reviews.each do |review| %>
        <div class="reviews">
          <div class="star-rating" data-score= <%= review.rating %>> </div>
          <p><%= review.comment %></p>
      
        </div>
        <%end%>
        <%end%>
      </div>
    </div>
  </div>
  <% if current_user.try(:admin?) %>
<%= link_to 'Atras', animes_path, class: "btn btn-info" %> |
<%= link_to 'Editar', edit_anime_path(@anime), class: "btn btn-success" %> |
<%= link_to 'Borrar', @anime, method: :delete, class: "btn btn-danger", data: {confirm: '¿Estas seguro que quieres borrar este anime?'} %>
<%end%>

</div>




<script>
  $('.star-rating').raty({
    path: '/assets/',
    readOnly: true,
    score: function(){
      return $(this).attr('data-score');
    }
  });
</script>
