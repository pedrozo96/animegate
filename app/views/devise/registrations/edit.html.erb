<div class="container">
<div class="panel panel-default">

  <div class="panel-heading">
  <h2>Configurar cuenta: <%=  current_user.email  %></h2>
  </div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field form-group">
            <%= f.label :avatar, class: 'col-sm-2 control-label'  %>
            <div class="col-sm-12">
                <%= f.file_field :avatar %>
            </div>
        </div><br>

        <div class="field form-group">
          <%= f.label :username %><br />
          <%= f.text_field :username, autofocus: true, class: 'form-control' %>
        </div>

        <div class="field form-group">
          <%= f.label :correo %><br />
          <%= f.email_field :email, class: 'form-control' %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field form-group">
          <%= f.label :contrase単a %> <i>(Deja el campo en blanco si no la quieres cambiar)</i><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> caracteres minimos</em>
          <% end %>
        </div>

        <div class="field form-group">
          <%= f.label :confirmar_contrase単a %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="field form-group">
          <%= f.label :contrase単a_actual %> <i>(Necesitamos tu contrase単a actual para confirmar los cambios)</i><br />
          <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit "Actualizar", class: 'btn btn-primary'  %>
        </div>
      <% end %>

      <h3>Eliminar cuenta</h3>

      <p>
      <%= button_to "Eliminar mi cuenta", registration_path(resource_name), data: { confirm: "Estas seguro de que quieres eliminar tu cuenta?" }, method: :delete, class: 'btn btn-danger'  %>

      </p>
       </div>
      <div class="panel-footer">
      <%= link_to "Regresar", :back %>
      </div>

</div>

</div>
